          <input type="radio" name="avatar" value="avatar03.png"><img class="avatar-img" src="/images/avatar03.png" alt="Avatar 03" data-avatar="avatar03.png">
          <input type="radio" name="avatar" value="avatar04.png"><img class="avatar-img" src="/images/avatar04.png" alt="Avatar 04" data-avatar="avatar04.png">
        </div>
        <button class="btn btn-primary">Save</button>
      </form> 
    </section>

    <section>
      <h2>Password</h2>
      <p>Change Password</p>
    </section>
    
  </div>


